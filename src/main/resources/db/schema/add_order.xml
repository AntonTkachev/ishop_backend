<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create order table"
               author="Anton"
               logicalFilePath="db/schema/add_order.xml">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="shop_order"/>
            </not>
        </preConditions>

        <createTable tableName="shop_order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)"/>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order2customer"/>
            </column>
<!--            <column name="product_id" type="BIGINT">-->
<!--                <constraints nullable="true" foreignKeyName="fk_order2product"/>-->
<!--            </column>-->
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_order2customer"
                baseTableName="shop_order"
                baseColumnNames="customer_id"
                referencedTableName="shop_customer"
                referencedColumnNames="id"/>

<!--        <addForeignKeyConstraint-->
<!--                constraintName="fk_order2product"-->
<!--                baseTableName="shop_order"-->
<!--                baseColumnNames="product_id"-->
<!--                referencedTableName="shop_product"-->
<!--                referencedColumnNames="id"/>-->

        <rollback>
            <dropTable tableName="shop_order"/>
        </rollback>

    </changeSet>
</databaseChangeLog>